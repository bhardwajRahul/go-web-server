# Application Configuration
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_LOG_LEVEL=debug
APP_LOG_FORMAT=text

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_SHUTDOWN_TIMEOUT=30s

# Database Configuration (PostgreSQL)
DATABASE_URL=postgres://username:password@localhost:5432/gowebserver?sslmode=disable
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=gowebserver
DATABASE_SSLMODE=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MIN_CONNECTIONS=5
DATABASE_TIMEOUT=30s
DATABASE_MAX_CONN_LIFETIME=1h
DATABASE_MAX_CONN_IDLE_TIME=30m
DATABASE_RUN_MIGRATIONS=true

# Security Configuration
SECURITY_TRUSTED_PROXIES=127.0.0.1
SECURITY_ENABLE_CORS=true
SECURITY_ALLOWED_ORIGINS=*

# Authentication/JWT Configuration
AUTH_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
AUTH_TOKEN_DURATION=24h
AUTH_REFRESH_DURATION=168h
AUTH_COOKIE_NAME=auth_token
AUTH_COOKIE_SECURE=false

# Feature Flags
FEATURES_ENABLE_METRICS=true
FEATURES_ENABLE_PPROF=false